<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title1_ll"
            type="String" />

        <variable
            name="title2_ll"
            type="String" />

        <variable
            name="title3_ll"
            type="String" />

        <variable
            name="title4_ll"
            type="String" />

        <variable
            name="title5_ll"
            type="String" />

        <variable
            name="title6_ll"
            type="String" />

        <variable
            name="time1_ll"
            type="String" />

        <variable
            name="time2_ll"
            type="String" />

        <variable
            name="time3_ll"
            type="String" />

        <variable
            name="time4_ll"
            type="String" />

        <variable
            name="time5_ll"
            type="String" />

        <variable
            name="time6_ll"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <net.tsz.afinal.view.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:center_tv="游戏大厅"
            app:left_iv="@mipmap/left_jian"
            app:right_iv="@mipmap/caidan_san" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingLeft="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/userinfo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/money" />

                <TextView
                    android:id="@+id/yue_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/cz_btn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg_bian"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="充值"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tx_btn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_bg_bian"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="提现"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_bg" />

        <net.tsz.afinal.view.AlwaysMarqueeTextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="这里显示滚动公告sdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdf阿斯达所大所多" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="2.5"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_bg_white"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        style="@style/main_item_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@{title1_ll}"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="32dp"
                        android:background="@drawable/main_bg"
                        android:gravity="center"
                        android:text="@{time1_ll}" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_bg_white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/main_item_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@{title2_ll}"

                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="32dp"
                        android:background="@drawable/main_bg"
                        android:gravity="center"
                        android:text="@{time2_ll}" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_bg_white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/main_item_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@{title3_ll}"

                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="32dp"
                        android:background="@drawable/main_bg"
                        android:gravity="center"
                        android:text="@{time3_ll}" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_bg_white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/main_item_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@{title4_ll}"

                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="32dp"
                        android:background="@drawable/main_bg"
                        android:gravity="center"
                        android:text="@{time4_ll}" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_bg_white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/main_item_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@{title5_ll}"

                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="32dp"
                        android:background="@drawable/main_bg"
                        android:gravity="center"
                        android:text="@{time5_ll}" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_bg_white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/main_item_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@{title6_ll}"

                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="32dp"
                        android:background="@drawable/main_bg"
                        android:gravity="center"
                        android:text="@{time6_ll}" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" />
        </LinearLayout>
    </LinearLayout>
</layout>