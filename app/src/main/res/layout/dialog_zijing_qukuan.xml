<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:gravity="center"
        android:padding="10dp"
        android:text="查看详情" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易编号：" />

            <TextView
                android:id="@+id/zijin_bianhao"
                android:layout_width="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="001" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起时间：" />

            <TextView
                android:id="@+id/zijin_time"
                android:layout_width="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0000-00-00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易类型：" />

            <TextView
                android:id="@+id/zijin_leixing"
                android:layout_width="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提现" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易金额：" />

            <TextView
                android:id="@+id/zijin_jine"
                android:layout_width="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00.00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手续费用：" />

            <TextView
                android:id="@+id/zijin_feiyong"
                android:layout_width="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00.00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易状态：" />

            <TextView
                android:id="@+id/zijin_zhuangtai"
                android:layout_width="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提现成功" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值方式：" />

            <TextView
                android:id="@+id/zijin_chongzhi"
                android:layout_width="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="系统充值" />

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        备注：" />

            <TextView
                android:id="@+id/zijin_bz"
                android:layout_width="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123456" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_zijin_ok"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@color/colorPrimary"
                android:text="确定"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>